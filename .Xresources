// URxvt
URxvt.font: xft:Terminus (TTF):style=Bold:size=15, xft:Font Awesome 5 Free Regular:size=13
URxvt.scrollBar: false
//URxvt.fading: 10
URxvt.externalBorder: 0
URxvt.internalBorder: 0
URxvt.iso14755: false // Disable ctrl+shift dumbness

// URxvt modules
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.mather.button: 1 //Middle click
URxvt.matcher.rend.0: Uline Bold fg6

// Bindings to move one word in URxvt
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C
