#!/bin/sh

# Unarchive
# Features smart extract here when archive contains a single file
for a in "$@"
do
	[ -f "$a" ] || break
	if [ "$(bsdtar -tf "$a" | sed '/.*\/./d' | wc -l)" -lt 2 ]
	then
		bsdtar -xf "$a" || break
	else
		BN=$(basename "$a")
		EXT=${BN##*.}
		DN=$(basename -s ."$EXT" "$BN")
		mkdir "$DN" || break
		bsdtar -xf "$a" -C "$DN" || break
	fi
	rm "$a"
done
