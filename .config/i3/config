set $mod Mod4
floating_modifier $mod

# The font used in the i3bar (i3-gaps)
font pango:Terminus (TTF) Bold 20px

# start a terminal
bindsym $mod+Return exec $TERMINAL

# kill focused window
bindsym $mod+Shift+q kill

# program launcher
#bindsym $mod+d exec rofi -show run
bindsym $mod+d exec dmenu_run -fn "Terminus (TTF):size=18:style=Bold" -nb "#282828" -nf "#ebdbb2" -sb "#ebdbb2" -sf "#282828" -i

# Rofi emoji
bindsym $mod+e exec ~/.scripts/emoji

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left 30
bindsym $mod+Shift+Down move down 30
bindsym $mod+Shift+Up move up 30
bindsym $mod+Shift+Right move right 30

# split orientation
bindsym $mod+v split h
bindsym $mod+c split v

bindsym $mod+f fullscreen toggle

bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle

bindsym $mod+s exec ~/.scripts/speaktome

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1  "
set $ws2 " 2 "
set $ws3 " 3 "
set $ws4 " 4 "
set $ws5 " 5 "
set $ws6 " 6 "
set $ws7 " 7 "
set $ws8 " 8 "
set $ws9 " 9 "
set $ws10 "10  "

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Alternatively switch to next or previous workspace with tab
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

assign [class="Steam"] $ws10

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	bindsym $mod+Left resize shrink width 1 px or 1 ppt
	bindsym $mod+Down resize grow height 1 px or 1 ppt
	bindsym $mod+Up resize shrink height 1 px or 1 ppt
	bindsym $mod+Right resize grow width 1 px or 1 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# System controls in bar
set $mode_system System (l)ock, (e)xit, (s)uspend, (r)eboot, (p)ower-off
mode "$mode_system" {
	bindsym l exec --no-startup-id i3lock -ec 000000, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym s exec --no-startup-id systemctl suspend, mode "default"
	bindsym r exec --no-startup-id systemctl reboot, mode "default"
	bindsym p exec --no-startup-id systemctl poweroff, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym m mode "default"
	bindsym $mod+m mode "default"
}
bindsym $mod+m mode "$mode_system"

# Get colors from .Xresources
set_from_resource $black	color0	#000000
set_from_resource $darkred	color1	#000000
set_from_resource $darkgreen	color2	#000000
set_from_resource $darkyellow	color3	#000000
set_from_resource $darkblue	color4	#000000
set_from_resource $darkmagenta	color5	#000000
set_from_resource $darkcyan	color6	#000000
set_from_resource $lightgray	color7	#000000
set_from_resource $darkgray	color8	#000000
set_from_resource $red		color9	#000000
set_from_resource $green	color10	#000000
set_from_resource $yellow	color11	#000000
set_from_resource $blue		color12	#000000
set_from_resource $magenta	color13	#000000
set_from_resource $cyan		color14	#000000
set_from_resource $white	color15	#000000
set_from_resource $bg background #000000

# Xresources colours
# <colorclass>		<border>	<background><text>		<indicator>		<child_border>
client.focused		$black		$white		$black		$magenta		$white
client.focused_inactive $black	$black		$darkgray	$darkmagenta	$darkgray
client.unfocused	$black		$black		$darkgray	$darkmagenta	$darkgray
client.urgent		$black		$black		$black		$white			$red

bar {
	status_command i3blocks -c ~/.config/i3/i3blocks.conf

	position top
	separator_symbol " "
	tray_padding 0
	strip_workspace_numbers yes
	#tray_output none
	colors {
		background	$bg
		statusline	$white
		
		#<colorclass>		<border>	<background><text>
		focused_workspace	$bg			$bg			$white
		inactive_workspace	$bg			$bg			$darkgray
		urgent_workspace	$darkred	$darkred	$white
	}
}

# Execute on each load
exec_always xrdb ~/.Xresources

### Execute on startup ###
exec --no-startup-id xrandr --dpi 96
exec --no-startup-id udiskie -ans2 &
exec --no-startup-id dunst
#exec --no-startup-id setxkbmap -layout us,fi -option 'grp:switch'
exec --no-startup-id firefox

for_window [class="Firefox"] border pixel 3
for_window [class=".*"] border pixel 3

# XF86 keyboard bindings
bindsym XF86AudioPause exec playerctl play-pause && exec pkill -SIGRTMIN+13 i3blocks
bindsym XF86AudioPrev exec playerctl previous && exec pkill -SIGRTMIN+13 i3blocks
bindsym XF86AudioNext exec playerctl next && exec pkill -SIGRTMIN+13 i3blocks
bindsym XF86AudioLowerVolume exec amixer sset Master 5%- && exec pkill -SIGRTMIN+12 i3blocks 
bindsym XF86AudioRaiseVolume exec amixer sset Master 5%+ && exec pkill -SIGRTMIN+12 i3blocks
bindsym XF86AudioMute exec amixer sset Master toggle && exec pkill -SIGRTMIN+12 i3blocks
bindsym XF86HomePage exec firefox
#bindsym XF86Tools
#bindsym XF86Mail
