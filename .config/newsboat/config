bind-key j down
bind-key k up

bind-key h quit articlelist
bind-key h quit article
bind-key l open
bind-key L toggle-show-read-feeds

bind-key u pageup
bind-key d pagedown
bind-key U show-urls

bind-key N prev-unread

bind-key g home
bind-key G end

bind-key a toggle-article-read
bind-key o open-in-browser-and-mark-read

# No accidental deletions
unbind-key D
unbind-key ^D
unbind-key $

color info default color0
color listfocus default color0
color listfocus_unread default color0 bold

itemview-title-format "Article '%T' (%u unread, %t total)"
articlelist-title-format "Articles in feed '%T' (%u unread, %t total)%?F? matching filter `%F'&? - %U"
feedlist-title-format "%?F?Feeds&Your feeds? (%u unread, %t total)%?F? matching filter `%F'&?%?T? - tag `%T'&?"

goto-next-feed no
reload-threads 5
text-width 80
toggleitemread-jumps-to-next-unread true
