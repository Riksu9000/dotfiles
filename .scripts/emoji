#!/bin/sh

# Emoji selector

FONT="xos4 Terminus 18"
EMOJIFILE="$HOME/.scripts/emojis"
BG="#282828"; FG="#928374"; HLFG="#ebdbb2"; HLBG="#d65d0e"
#BG="#000000"; FG="#bbbbbb"; HLBG="#005577"; HLFG="#eeeeee"
#BG="#ffffff"; FG="#000000"; HLBG="#5c5cff"; HLFG="#000000"

# Show a list of emoji and awk the selected emoji to variable $SYMBOL
SYMBOL=$(cat $EMOJIFILE | rofi -font "$FONT" \
	-color-normal $BG,$FG,$BG,$HLBG,$HLFG \
	-color-window $BG,$HLBG \
	-separator-style none \
	-hide-scrollbar 1 \
	-padding 20 \
	-columns 2 \
	-dmenu \
	-bw 4 \
	-p "Copy emoji to clipboard" | awk '{printf $1}')

# If nothing was selected
[ -z "$SYMBOL" ] && exit

# Otherwise send a notification
echo -n $SYMBOL | xclip && notify-send "$SYMBOL copied"
