#!/bin/sh

echo "Dark colors"

# Output numbers in all dark colours
for i in {0..7}; do
echo -en "\e[$((30 + i))m  $((i))  "
done

echo -e "\e[0m" # New line and reset colours

# Output bars in all dark colours
for i in {0..7}; do
echo -en "\e[$((40 + i))m     "
done

echo -e "\e[0m"

# Output bars in all bright colours
for i in {8..15}; do
echo -en "\e[$((i + 92))m     "
done

echo -e "\e[0m"

# Output numbers in all bright colours
for i in {8..15}; do
echo -en "\e[$((82 + i))m$(echo "  $i  " | cut -c 1-5)"
done

echo -e "\n\e[0mLight colors"
