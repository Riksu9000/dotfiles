#!/bin/sh

[ -z $(command -v xsetwacom) ] && notify-send "You need to install xsetwacom!" && exit
[ -z $(xsetwacom list devices) ] && notify-send "Tablet was not detected" && exit

DEVICE="Wacom Intuos S"
STYLUS="$DEVICE Pen stylus"

if [ $(xsetwacom get "$STYLUS" Suppress) -eq 2 ]; then
	notify-send "Setting tablet to pefromance mode"
	xsetwacom set "$STYLUS" Suppress 1
	xsetwacom set "$STYLUS" RawSample 1
else
	notify-send "Setting tablet to quality mode"
	xsetwacom set "$STYLUS" Suppress 2
	xsetwacom set "$STYLUS" RawSample 4
fi

